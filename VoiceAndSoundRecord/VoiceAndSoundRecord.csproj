<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Helemet.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Helemet.bmp" />
    <None Remove="TornadoElevBlue.bmp" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Helemet.ico" />
    <Content Include="TornadoElevBlue.bmp">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NAudio" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Helemet.bmp" />
  </ItemGroup>

</Project>
